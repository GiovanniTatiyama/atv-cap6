@model Trafego1.Models.Semaforos

@{
    ViewData["Title"] = "Excluir Semáforo";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja excluir este Semáforo?</h3>
<div>
    <h4>Semáforo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SemaforosId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SemaforosId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Localizacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Localizacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FluxoTrafego)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FluxoTrafego)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SemaforosId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>